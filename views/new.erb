<div class="container">
    <div class="row">
        <div class="box">
            <div class="col-lg-12">
                <% if flash[:error] %>
                  <div class="notice" style="text-align:center;"><%= flash[:error] %></div>
                <% end %>
                <hr>
                <h2 class="intro-text text-center">Please Signup or <a href="/signin">LOGIN</a>
                <hr>
                <div class="col-lg-12 text-center">
                  <form action="/newuser" method="post" id="form1">
                  <label class="label">Username</label>
                  <input type="text" name="username" required="true">
                  <label class="label">Email</label>
                  <input type="text" name="email" required="true">
                  <label class="label">Password</label>
                  <input type="password" name="password" required="true"></br>
                  <button class = "label" id="create">Create Account</button>
                  </form>
              </div>
          </div>
       </div>
   </div>
</div>
<!-- validation -->
<script  type="text/javascript">
     var frmvalidator = new Validator("form1");
     frmvalidator.addValidation("username","req","Please enter your First Name");
     frmvalidator.addValidation("username","maxlen=20","Max length for Name is 20");
     frmvalidator.addValidation("email","maxlen=50");
     frmvalidator.addValidation("email","req");
     frmvalidator.addValidation("email","email");
</script>
