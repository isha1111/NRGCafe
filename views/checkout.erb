<div class="container">
    <div class="row">
        <div class="box">
            <div class="col-lg-12">
                <hr>
                <h2 class="intro-text text-center">Order Summary
                </h2>
                <hr>
                <div class="col-lg-12 text-center">
                  <% sum = 0 %>
                  <% @@order.each do |id| %>
                      <% added_dish = Dish.find_by(id: id) %>
                      <%= added_dish.name %> <%= added_dish.price %> <br>
                      <% sum += added_dish.price.to_f %>
                  <% end %>
                  Total is $<%= sum %>
                  <hr>
                  Do You want to continue checkout
                  <form action="/securesession"><button>Yes</button></form>
                  <form action="/menu"><button>No</button></form>
                </div>
            </div>
       </div>
   </div>
</div>
