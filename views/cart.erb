<div class="container">
    <div class="row">
        <div class="box">
            <div class="col-lg-12">
                <hr>
                <h2 class="intro-text text-center">Cart
                </h2>
                <hr>
                <div class="col-lg-12 text-center">
                  <% sum = 0 %>
                  <% @@order.each do |id| %>
                      <% added_dish = Dish.find_by(id: id) %>
                      <%= added_dish.name %> <%= added_dish.price %>
                      <a href="/delete/<%= added_dish.id %>"><span class="glyphicon glyphicon-remove-sign" aria-hidden="true"></span></a>
                      <br>
                      <% sum += added_dish.price.to_f %>
                  <% end %>
                  Total is $<%= sum %>
                </div>
            </div>
            <form action="/checkout" method="post">
            <button>Checkout</button>
          </form>
        </div>
    </div>
</div>
