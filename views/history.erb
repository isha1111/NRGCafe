<div class="box">
    <div class="col-lg-12 text-center">
        <p style="color:black;text-align:center;font-weight:BOLD;">Recent Orders Placed by <%= @user %></p>
        <% @order.each do |order| %>
          <% order.dishes.each do |dish| %>
             <p style="color:black;text-align:center;"><%= dish.name %> on <span><%= order.time %></sapn></p>
          <% end %>
        <% end %>
    </div>
</div>
